{
  "version": 2,
  "builds": [
    { "src": "wp-config.php", "use": "@now/wordpress",
      "config": { "releaseUrl": "https://wordpress.org/wordpress-5.0.1.zip",
                  "patchForPersistentConnections": true } }
  ],
  "routes": [
    { "src": "/", "dest": "index.php" },
    { "src": "/wp-admin/?", "dest": "index.php" },
    { "src": "^\\\/.*\\.php", "dest": "index.php" }
  ]
}
