{
  "version": 2,
  "builds": [
    {
      "src": "app/config.ru",
      "use": "@now/ruby",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [{ "src": "/", "dest": "app/config.ru" }],
  "probes": [{ "path": "/", "mustContain": "gem:RANDOMNESS_PLACEHOLDER" }],
  "env": {
    "RAILS_ENV": "production",
    "RAILS_LOG_TO_STDOUT": "1"
  }
}
